@model PR2_WEBCORE.Models.Categorium

@{
    ViewData["Title"] = "Eliminar Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Eliminar Categoría</h1>
    <div>
        <h4>¿Está seguro que desea eliminar esta categoría?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Model.IdCagegoria
            </dd>
            <dt class="col-sm-2">
                Descripción
            </dt>
            <dd class="col-sm-10">
                @Model.Descripcion
            </dd>
            <dt class="col-sm-2">
                Porcentaje
            </dt>
            <dd class="col-sm-10">
                @Model.Porcentaje
            </dd>
        </dl>
        <form asp-controller="Categoria" asp-action="Delete" method="post">
            <input type="hidden" asp-for="IdCagegoria" />
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
