
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="icon" type="image/x-icon" href="~/images/ROAYLTI_GARD.png" />
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <center>
    <div class="container mt-5 pt-5">
        <div class="col-12 col-xl-4 col-md-6">
            <div class="card">
                <div class="card-header">
                    Iniciar Sesion
                </div>
                <div class="card-body">
                    <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">
                            <img src="~/images/ROAYLTI_GARD.png" width="200" height="200" style="border: 3px solid #ccc;" />
                        <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo"/>
                        <input class="form-control mb-3" type="password" placeholder="contraseña" required name="clave"/>
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit"> Iniciar Sesion</button>
                        </div>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="form-group">
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            </div>
                        }                         
                    </form>
                </div>
            </div>
            
        </div>
    </div>
    </center>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
