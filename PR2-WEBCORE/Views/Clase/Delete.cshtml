@model PR2_WEBCORE.Models.Clase

@{
    ViewData["Title"] = "Eliminar Clase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Eliminar Clase</h1>
    <h3>¿Está seguro de que desea eliminar esta Clase?</h3>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.IdClase</dd>
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
        <dt class="col-sm-2">Porcentaje</dt>
        <dd class="col-sm-10">@Model.Porcentaje</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdClase" />
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
